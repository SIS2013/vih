<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="269dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/twitter" />

    <TextView
        android:id="@+id/codigoRespuesta"
        android:layout_width="233dp"
        android:layout_height="36dp" />

    <Button
        android:id="@+id/btnOAuth"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/LoginTextSize" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="181dp"
        android:layout_height="43dp" />

    <Button
        android:id="@+id/getTweets"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Tweets @ONUSIDAGuate"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TweetsOnusida" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="181dp"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/postTweets"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Post tweets"
        android:textColor="@android:color/white"
        android:textSize="@dimen/LoginTextSize" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="181dp"
        android:layout_height="43dp" />

</LinearLayout>
</ScrollView>